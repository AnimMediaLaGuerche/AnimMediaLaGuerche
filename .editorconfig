# Configuration de l'éditeur pour le projet Anim'Média

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.{html,css,js}]
indent_size = 4

[*.{json,md}]
indent_size = 2

[*.html]
max_line_length = 120

[*.css]
max_line_length = 100

[*.js]
max_line_length = 100
